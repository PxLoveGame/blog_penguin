<!-- Blog Post -->
<div class="card mb-4">
    <img class="card-img-top" height="350" src="{{ asset(article.getPhotoUrl()) }}" alt="Card image cap">
    <div class="card-body">
        <h2 class="card-title">{{ article.getTitle() }}</h2>
        <p class="card-text article-text">{{ article.getContent() }}</p>
        <a href="#" class="btn btn-primary">Read More &rarr;</a>
        <a href="/post/delete/{{ article.getId() }}" class="btn btn-danger float-right mx-1">Delete</a>
        <a href="/post/edit/{{ article.getId() }}" class="btn btn-warning float-right mx-1">Edit</a>
    </div>
    <div class="card-footer text-muted">
        Posted on {{ article.published | date('Y-m-d H:i:s')}}
    </div>
</div>